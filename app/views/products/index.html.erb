<% if user_signed_in? %>
  <p id="intro">
    Merhaba
    <%= current_user.name %>
    <br/>
    <span>
      Hoşgeldiniz
    </span>
  </p>
<% else %>
  <p id="intro">
    Bu site nedir?
    <br/>
    <span>
      Protein tozu satımı yapılmaktadır.
    </span>
  </p>
<% end %>
<div id="products">
  <% @products.each do |product| %>
    <div class="product">
      <div class="product_image">
        <%= link_to (image_tag product.image.url(:small)), product %>
      </div>
      <div class="product_content">
        <div class="title">
          <h2>
            <%= link_to product.title, product %>
          </h2>
        </div>
        <div class="data clearfix">
          <p class="username">
            <%= product.user.name %>
            taradından paylaşıldı.
          </p>
          <p class="buttons">
            <span>
              <i class="fa fa-comments-o"></i>
              <%= product.comments.count %>
              yorum.
            </span>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
