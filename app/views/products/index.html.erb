<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag "slider1.jpg", style:"width: 100%", alt:"Hitsteroid.com Steroid Ürünleri"%>
    </div>

    <div class="item">
      <%= image_tag "slider2.jpg", style:"width: 100%", alt:"Hitsteroid.com Kapıda Ödeme Steroid Ürünleri"%>
    </div>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<% if @hazir_kurler.count > 0 %>
  <div class="new">
  <div class="container">
    <div class="title-info wow fadeInUp animated" data-wow-delay=".5s">
      <h3 class="title">Hazır <span>Kürler</span></h3>
      <p><%= link_to 'Tüm Hazır Kürler İçin Tıklayın', detailed_products_index_path("hazir"=>"check") %></p>
    </div>
    <div class="new-info">
      <% @hazir_kurler.each do |product| %>
      <div class="col-md-3 new-grid simpleCart_shelfItem wow flipInY animated" data-wow-delay=".5s">
        <div class="new-top">
          <%= link_to image_tag(product.image.url, style: 'height:150px;width:300px;', class: "img-responsive", alt: (product.category + " " + product.title)), product %>
          <div class="new-text">
            <ul>
              <li><%= link_to 'Sepete Ekle', product_sepets_path(:product_id => product.id), :method=> :post %></li>
              <li><%= link_to 'Hızlı Bakış', product %></li>
              <li><%= link_to 'Detaylı Arama', detailed_products_index_path %></li>
            </ul>
          </div>
        </div>
        <div class="new-bottom">
          <h5><%= link_to product.title, product %></h5>
          <div class="rating">
            <span class="on">☆</span>
            <span class="on">☆</span>
            <span class="on">☆</span>
            <span class="on">☆</span>
            <span>☆</span>
          </div>
          <div class="ofr">
            <% if product.discount %>
            <p class="pric1"><del><%= product.price %> TL</del></p>
            <p><span class="item_price"><%= product.discount %> TL</span></p>
            <% else %>
            <p><span class="item_price"><%= product.price %> TL</span></p>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
      
      <div class="clearfix"> </div>
    </div>
  </div>
</div>
<% end %>
  
