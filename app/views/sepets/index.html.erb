<!--cart-items-->
<div class="cart-items">
	<div class="container">
		<h3 class="wow fadeInUp animated" data-wow-delay=".5s">Sepetim(<%= @sepets.count %>)</h3>
		<% @sepets.each do |sepet| %>
		<div class="cart-header wow fadeInUp animated" data-wow-delay=".5s">
			<%= link_to product_sepet_path(sepet.product, sepet), alt: "favorilerden sil", method: :delete, data: {confirm: "Ürünü sepetten çıkarıyorsunuz?"} do %>
				<div class="alert-close"></div>
			<% end %>
			<div class="cart-sec simpleCart_shelfItem">
				<div class="cart-item cyc">
					<%= link_to product_path(sepet.product) do %><%= image_tag sepet.product.image.url(:small), class: "img-responsive"%><% end %>
				</div>
				<div class="cart-item-info">
					<h4><%= link_to product_path(sepet.product) do %><span><%= sepet.product.title %></span> <% end %></h4>
					<div class="delivery">
						<span>Sepete Ekleniş Tarihi : <%= sepet.created_at.to_date %></span>
						<div class="clearfix"></div>
					</div>	
				</div>
				<div class="clearfix"></div>
			</div>
		</div>
		<% end %>	
	</div>
</div>
<!--//cart-items-->	