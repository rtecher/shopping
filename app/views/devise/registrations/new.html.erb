<div class="login-page">
  <div class="title-info wow fadeInUp animated" data-wow-delay=".5s">
    <h3 class="title">Üye olma<span> Form</span></h3>
  </div>
  <div class="widget-shadow">
    <div class="login-top wow fadeInUp animated" data-wow-delay=".7s">
      <h4>Hesabınız Var mı ?<%= link_to 'Giriş Yap', new_user_session_path %> </h4>
    </div>
    <div class="login-body">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), class:"wow fadeInUp animated") do |f| %>
        <%= f.error_notification %>
        <%= f.label :name, "Ad" %>
        <%= f.input :name, required: true, autofocus: true , class: "fields" %>
        <%= f.input :surname, required: true, class: "fields" %>
        <%= f.input :username, required: true, class: "fields" %>
        <%= f.input :address, required: true, class: "fields" %>
        <%= f.input :phone, required: true, class: "fields" %>
        <%= f.label :email, "Email" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        <%= f.label :password, 'Parola' %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> karakter minimum)</em>
        <% end %><br />
        <%= f.password_field :password, required: true, autocomplete: "off" %>
        
        <%= f.label :password_confirmation, 'Parolayo tekrar giriniz' %><br />
        <%= f.password_field :password_confirmation, required: true, autocomplete: "off" %>
        
        <div class="form-actions">
            <%= f.button :submit, "Üye Ol" %>
          </div>
        <% end %>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>
