<style>
div.gallery {
    margin: 5px;
    border: 1px solid #ccc;
    float: left;
    width: 300px;
}

div.gallery:hover {
    border: 1px solid #777;
}

div.gallery img {
    width: 100%;
    height: auto;
}

div.desc {
    padding: 15px;
    text-align: center;
}
</style>
</head>
<body>

<% @references.each do |reference| %>
  <div class="gallery">
    <a target="_blank" href="fjords.jpg">
      <%= image_tag reference.url, width: "300", height: "200" %>
    </a>
  </div>
<% end %>

<div class="clearfix"> </div>
